# Maintainer: Nebulosa  <nebulosa2007-at-yandex-dot-ru>

pkgname=amnezia-client-bin
pkgver=4.5.3.0
pkgrel=1
pkgdesc="Amnezia VPN Client"
arch=(x86_64)
url="https://github.com/amnezia-vpn/${pkgname%-bin}"
license=(GPL-3.0-only)
depends=(
  dbus
  fontconfig
  freetype2
  gcc-libs
  glibc
  krb5
  libglvnd
  libx11
  libxcb
  libxext
  xz
  zlib
)
provides=(${pkgname%-bin})
conflicts=(${pkgname%-bin})
options=(!debug)
source=($url/releases/download/$pkgver/AmneziaVPN_Linux_installer.tar.zip)
b2sums=('4a6fbdea9fc208f9e1627f7fadcea59e1b862bfec5ecf0d8eab57cbf81343994f5fd78696091946df1d492250638f4c5553945cc1d7992c75e6394aa3c8a12a4')

prepare() {
  tar xf AmneziaVPN_Linux_Installer.tar
}

package() { 
  install -vDm755  AmneziaVPN_Linux_Installer.bin "$pkgdir"/usr/bin/${pkgname%-bin}
}
